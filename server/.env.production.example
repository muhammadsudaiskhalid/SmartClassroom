# Production Environment Variables for Railway Deployment
# Copy these to Railway's Environment Variables section

# Database URL - Railway will provide this automatically
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/smartclassroom"

# JWT Secret - MUST be changed to a strong random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-MINIMUM-32-CHARACTERS"

# Super Admin Credentials - Change these before deployment!
SUPER_ADMIN_USERNAME="superadmin"
SUPER_ADMIN_PASSWORD="CHANGE-THIS-TO-A-STRONG-PASSWORD"

# Node Environment
NODE_ENV="production"

# Port (Railway/Render will provide this)
PORT=5000

# Frontend URL - Update this after deploying to Vercel
FRONTEND_URL="https://your-app.vercel.app"

# Optional: Prisma Settings
PRISMA_QUERY_ENGINE_BINARY="native"
