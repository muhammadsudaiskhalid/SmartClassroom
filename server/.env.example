# Server
PORT=5000
NODE_ENV=development

# CORS (Frontend URL)
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW=300000
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_LOCKOUT=900000
